<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ekspedisi.FormPengirimanBarangFragment"
    android:layout_marginTop="24dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="Detail Pengirim"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/open_sans_bold"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edt_nama_pengirim"
                android:textAllCaps="false"
                android:inputType="text"
                android:hint="@string/hint_nama_pengirim"
                android:layout_marginBottom="8dp"
                android:textSize="18sp"
                android:backgroundTint="@color/dark_navy"
                android:background="@drawable/bg_edittext"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edt_phone_pengirim"
                android:textAllCaps="false"
                android:inputType="phone"
                android:hint="@string/phone_hint"
                android:layout_marginBottom="8dp"
                android:textSize="18sp"
                android:backgroundTint="@color/dark_navy"
                android:background="@drawable/bg_edittext"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edt_alamat_pengirim"
                android:textAllCaps="false"
                android:inputType="textMultiLine"
                android:hint="@string/address_hint"
                android:layout_marginBottom="8dp"
                android:textSize="18sp"
                android:backgroundTint="@color/dark_navy"
                android:background="@drawable/bg_edittext"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edt_tgl_pengiriman"
                android:textAllCaps="false"
                android:editable="false"
                android:clickable="false"
                android:hint="31 Mei 2021"
                android:layout_marginBottom="8dp"
                android:textSize="18sp"
                android:backgroundTint="@color/dark_navy"
                android:background="@drawable/bg_edittext"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="24dp"/>

            <TextView
                android:text="Detail Penerima"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/open_sans_bold"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edt_nama_penerima"
                android:textAllCaps="false"
                android:hint="@string/hint_nama_penerima"
                android:inputType="text"
                android:layout_marginBottom="8dp"
                android:textSize="18sp"
                android:backgroundTint="@color/dark_navy"
                android:background="@drawable/bg_edittext"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edt_phone_penerima"
                android:textAllCaps="false"
                android:hint="@string/phone_hint"
                android:layout_marginBottom="8dp"
                android:inputType="phone"
                android:textSize="18sp"
                android:backgroundTint="@color/dark_navy"
                android:background="@drawable/bg_edittext"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edt_alamat_penerima"
                android:textAllCaps="false"
                android:hint="@string/address_hint"
                android:layout_marginBottom="8dp"
                android:textSize="18sp"
                android:inputType="textMultiLine"
                android:backgroundTint="@color/dark_navy"
                android:background="@drawable/bg_edittext"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--            <EditText-->
            <!--                android:id="@+id/edt_tgl_diterima"-->
            <!--                android:textAllCaps="false"-->
            <!--                android:hint="31 Mei 2021"-->
            <!--                android:layout_marginBottom="8dp"-->
            <!--                android:textSize="18sp"-->
            <!--                android:backgroundTint="@color/dark_navy"-->
            <!--                android:background="@drawable/bg_edittext"-->
            <!--                android:paddingHorizontal="16dp"-->
            <!--                android:paddingVertical="10dp"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"/>-->


            <View
                android:layout_width="match_parent"
                android:layout_height="24dp"/>

            <TextView
                android:text="Detail Barang"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/open_sans_bold"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <!--radio kelas motor-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>



            <TextView
                android:text="Nama Barang"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/open_sans"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/edt_nama_barang"
                android:textAllCaps="false"
                android:inputType="text"
                android:hint="Spare part motor Yamaha Beat"
                android:layout_marginBottom="8dp"
                android:textSize="18sp"
                android:backgroundTint="@color/dark_navy"
                android:background="@drawable/bg_edittext"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Berat"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/open_sans"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_berat"
                    android:textAllCaps="false"
                    android:hint="100"
                    android:inputType="numberDecimal"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="8dp"
                    android:textSize="18sp"
                    android:maxLength="4"
                    android:fontFamily="@font/open_sans"
                    android:backgroundTint="@color/dark_navy"
                    android:background="@drawable/bg_edittext"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="10dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="KG"
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_order"
        android:layout_marginBottom="64dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/bg_button"
        android:backgroundTint="@color/bg_button_state"
        android:text="@string/order"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>