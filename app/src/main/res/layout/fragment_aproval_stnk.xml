<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.stnk.AprovalStnkFragment"
    android:background="@drawable/centre_background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="16dp"
                app:cardElevation="10dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="2">

                        <TextView
                            android:text="Nama "
                            android:textStyle="bold"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_marginBottom="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="No HP "
                            android:textStyle="bold"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/black"
                            android:layout_marginBottom="16dp"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="No KTP/NIK "
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/black"
                            android:layout_marginBottom="16dp"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="No Polisi "
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/black"
                            android:layout_marginBottom="16dp"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="KTP Asli "
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/black"
                            android:layout_marginBottom="16dp"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="@font/open_sans"
                            android:text="STNK Asli "
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:text="BPKB Asli "
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/black"
                            android:layout_marginBottom="16dp"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Cek Fisik "
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/black"
                            android:layout_marginBottom="16dp"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Kwitansi"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/black"
                            android:layout_marginBottom="16dp"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Alamat "
                            android:maxLines="3"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/black"
                            android:layout_marginBottom="16dp"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_name"
                            tools:text="Azri Nurvani"
                            android:textStyle="bold"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_marginBottom="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/txt_phone"
                            tools:text="No HP : 0823666161616"
                            android:textStyle="bold"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/blue"
                            android:layout_marginBottom="16dp"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/txt_no_ktp"
                            tools:text="1307110502980001"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/black"
                            android:layout_marginBottom="16dp"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/txt_no_polisi"
                            tools:text="B 1234 TXA"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/black"
                            android:layout_marginBottom="16dp"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/txt_ktp_asli_avail"
                            tools:text="Ada"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/black"
                            android:layout_marginBottom="16dp"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/txt_stnk_asli_avail"
                            tools:text="Ada"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/black"
                            android:layout_marginBottom="16dp"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/txt_bpkb_asli_avail"
                            tools:text="Ada"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/black"
                            android:layout_marginBottom="16dp"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                        <TextView
                            android:id="@+id/txt_doc_cek_fisik"
                            tools:text="Ada"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/black"
                            android:layout_marginBottom="16dp"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/txt_receipt_avail"
                            tools:text="Ada"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/black"
                            android:layout_marginBottom="16dp"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/txt_address"
                            tools:text="Alamat : Jln. Taman Firdasu, Haji Soebrantas, Pekanbaru"
                            android:fontFamily="@font/open_sans"
                            android:maxLines="3"
                            android:textColor="@color/black"
                            android:layout_marginBottom="16dp"
                            android:textSize="14sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/txt_jenis_doc"
                            android:textStyle="bold"
                            tools:text="STNK 5 Tahunan"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/black"
                            android:layout_marginBottom="16dp"
                            android:layout_marginRight="4dp"
                            android:textSize="14sp"
                            android:layout_gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="24dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_approve"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_button_green"
                android:text="Approve"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_reject"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_button_red"
                android:text="Reject"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>